{
  "name": "create-stratix",
  "version": "0.1.3",
  "description": "Create Stratix apps with zero configuration",
  "type": "module",
  "bin": {
    "create-stratix": "./bin/index.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsc && pnpm copy-templates",
    "copy-templates": "node scripts/copy-templates.js",
    "test": "vitest run || exit 0",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ignore-pattern '**/*.test.ts' --ignore-pattern '**/__tests__/**'",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\""
  },
  "keywords": [
    "stratix",
    "create-stratix",
    "scaffolding",
    "starter",
    "template",
    "ddd",
    "hexagonal"
  ],
  "author": "P. Andr√©s Carvajal <causticrez@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ejs": "^3.1.10",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "typescript": "^5.7.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pcarvajal/stratix.git",
    "directory": "packages/create-stratix"
  },
  "homepage": "https://github.com/pcarvajal/stratix#readme",
  "bugs": {
    "url": "https://github.com/pcarvajal/stratix/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
